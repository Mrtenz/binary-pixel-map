{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "allowJs": true,
    "noEmitOnError": true,
    "strict": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ]
}
